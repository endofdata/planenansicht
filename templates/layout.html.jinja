<!DOCTYPE html>
<html lang="de">

<head>
	{% block head %}
	<title>Planen</title>
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<link rel="stylesheet" href="/static/css/main.css" />
	{% endblock %}
	{% block styles %}
	{% endblock %}
</head>

<body>
	<div class="menu">
		{% if not auth_context.user is none %}
			<div class="user">
				{% if not auth_context.user.display is none %}
					{{ auth_context.user.display }}
				{% else %}
					{% if not auth_context.user.name is none %}
						{{ auth_context.user.name }}
					{% endif %}
				{% endif %}
			</div>
			<div><button onclick="admin_menu()">Verwaltung</button></div>
			<div><button onclick="logout()">Abmelden</button></div>
		{% else %}
			<div><button onclick="login()">Anmelden</button></div>				
		{% endif %}
	</div>
	<div class="content">
		{% block content %}
		{% endblock %}
	</div>
<script lang="JavaScript">
	function logout() {
		window.location = "{{ ROUTING.LOGOUT_ENDPOINT }}"
	}

	function login() {
		window.location = "{{ ROUTING.LOGIN_ENDPOINT }}"
	}

	function admin_menu() {
		window.location = "{{ ROUTING.LIST_USERS_ENDPOINT }}"
	}

	{% block script %}
	{% endblock %}
</script>
</body>
</html>